<Window x:Class="ListCollectionViewAsynchronousTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListCollectionViewAsynchronousTest"
        mc:Ignorable="d"
        Title="MainWindow" Width="390" Height="360">
    
    <Grid Margin="10" Width="348" Height="300">
        <DataGrid ItemsSource="{Binding TestViewList}" Width="348" Height="250" HorizontalAlignment="Center" VerticalAlignment="Bottom" SelectionMode="Single" IsReadOnly="True"/>
        <Button Width="174" Height="50" Panel.ZIndex="1" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Run" Click="RunCMD"/>
        <Button Width="174" Height="50" Panel.ZIndex="1" HorizontalAlignment="Right" VerticalAlignment="Top" Content="Stop" Click="StopCMD"/>
    </Grid>
</Window>
